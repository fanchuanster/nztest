worker_processes  1;

events {
    worker_connections  1024;
}

http {
    server {
        listen       443 ssl;
        server_name  {{ domain_name }};

        ssl_certificate      C:/nginx/certs/cert.crt;
        ssl_certificate_key  C:/nginx/certs/cert.key;

        location / {
            root   html;
            index  index.html index.htm;
        }
    }
}
